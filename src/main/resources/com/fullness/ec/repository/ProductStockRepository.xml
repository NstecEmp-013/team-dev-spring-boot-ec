<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullness.ec.repository.ProductStockRepository">

    <insert id="insert" parameterType="com.fullness.ec.entity.ProductStock">
        INSERT INTO product_stock 
            (product_id, quantity)
        VALUES 
            (#{productId}, #{quantity})
    </insert>

    <!-- <update id="update" parameterType="com.fullness.ec.entity.ProductStock">
        UPDATE product_stock
        SET quantity = #{quantity}
        WHERE product_id = #{productId}
    </update> -->

    <select id="selectByProductId" parameterType="int" resultType="com.fullness.ec.entity.ProductStock">
        SELECT 
            product_id, 
            quantity
        FROM product_stock
        WHERE product_id = #{productId}
    </select>

</mapper>
