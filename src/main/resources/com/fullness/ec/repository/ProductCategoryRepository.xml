<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.fullness.ec.repository.ProductCategoryRepository">
    
    <!-- 商品を登録 -->
    <insert id="insert" parameterType="com.fullness.ec.entity.ProductCategory">
        INSERT INTO product_category
            (name)
        VALUES
            (#{name})
    </insert>

    <!-- すべてのカテゴリを取得 -->
    <select id="selectAll" resultType="com.fullness.ec.entity.ProductCategory">
        SELECT
            id,
            name
        FROM product_category
    </select>

    <!-- ID指定でカテゴリを取得 -->
    <select id="selectById" parameterType="int" resultType="com.fullness.ec.entity.ProductCategory">
        SELECT
            id,
            name
        FROM product_category
        WHERE id = #{id}
    </select>

    <!-- 名前指定でカテゴリを取得 -->
    <select id="selectByName" parameterType="string" resultType="com.fullness.ec.entity.ProductCategory">
        SELECT 
            id, 
            name 
        FROM product_category 
        WHERE name = #{name}
    </select>

</mapper>